<?xml version="1.0" encoding="UTF-8"?>
<eto:TabPage
	   xmlns="http://schema.picoe.ca/eto.forms" 
	   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib"
       xmlns:eto="clr-namespace:Eto.Forms;assembly=Eto"
       xmlns:s="clr-namespace:SharpFlame.Gui.Controls;assembly=SharpFlame"
       Text="Labels">

    <eto:TableLayout >
        <eto:TableLayout>
            <eto:TableRow >
                <eto:Button ID="cmdScriptAreaCreate" Text="Create Area From Selection" Click="cmdScriptAreaCreate_Click"/>
                <eto:Label Text="Hold P and click to make positions." />
            </eto:TableRow>

            <eto:TableRow>
                <eto:Label Text="Positions:" />
                <eto:Label Text="Areas:" />
            </eto:TableRow>

            <eto:TableRow>
                <eto:TableCell ScaleWidth="True">
                    <eto:ListBox ID="lstScriptPositions" />
                </eto:TableCell>
                <eto:TableCell ScaleWidth="True">
                    <eto:ListBox ID="lstScriptAreas" />
                </eto:TableCell>
            </eto:TableRow>
        </eto:TableLayout>

        <eto:TableRow>

            <eto:TableLayout>
                <eto:TableRow ScaleHeight="True" />
                <eto:TableRow>
                    <eto:TableCell ScaleWidth="True" />
                    <eto:TableCell>
                        <eto:GroupBox ID="grpSelectedMarker" Text="Selected Marker">
                            <eto:TableLayout>
                                <eto:TableRow>
                                    <eto:TableLayout>
                                        <eto:TableRow>
                                            <eto:TableCell>
                                                <eto:Label Text="Label:"/>
                                            </eto:TableCell>
                                            <eto:TableCell>
                                                <eto:TableLayout>
                                                    <eto:TableRow>
                                                        <eto:TableCell>
                                                            <eto:TextBox Width="100" ID="txtLabel" />
                                                        </eto:TableCell>
                                                        <eto:TableCell></eto:TableCell>
                                                    </eto:TableRow>
                                                    <eto:TableRow>
                                                        <eto:TableCell></eto:TableCell>
                                                        <eto:TableCell></eto:TableCell>
                                                    </eto:TableRow>
                                                </eto:TableLayout>
                                            </eto:TableCell>
                                        </eto:TableRow>
                                    </eto:TableLayout>
                                </eto:TableRow>
                                <eto:TableLayout>
                                    <eto:TableRow>
                                        <eto:Label Text="x:"/>
                                        <eto:Label Text="y:"/>
                                    </eto:TableRow>
                                    <eto:TableRow>
                                        <eto:NumericUpDown ID="numX"/>
                                        <eto:NumericUpDown ID="numY"/>
                                    </eto:TableRow>
                                    <eto:TableRow>
                                        <eto:Label Text="x2:"/>
                                        <eto:Label Text="y2:"/>
                                    </eto:TableRow>
                                    <eto:TableRow>
                                        <eto:NumericUpDown ID="numX2"/>
                                        <eto:NumericUpDown ID="numY2"/>
                                    </eto:TableRow>
                                    <eto:TableRow>
                                        <eto:Button ID="cmdRemove" Text="Remove" Click="cmdRemove_Click"/>
                                    </eto:TableRow>
                                </eto:TableLayout>

                            </eto:TableLayout>

                        </eto:GroupBox>

                    </eto:TableCell>
                    <eto:TableCell ScaleWidth="True" />
                </eto:TableRow>
                <eto:TableRow ScaleHeight="True"/>
            </eto:TableLayout>



        </eto:TableRow>

        <eto:TableRow>
            <eto:TableLayout>
                <eto:TableRow ScaleHeight="True" />
                <eto:TableRow>
                    <eto:TableCell ScaleWidth="True" />
                    <eto:TableCell>
                    </eto:TableCell>
                    <eto:TableCell ScaleWidth="True" />
                </eto:TableRow>
                <eto:TableRow ScaleHeight="True"/>
            </eto:TableLayout>
        </eto:TableRow>

    </eto:TableLayout>
</eto:TabPage>